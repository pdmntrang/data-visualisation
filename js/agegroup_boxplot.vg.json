{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f5f5f5",
  "data": {"url": "https://raw.githubusercontent.com/pdmntrang/data-visualisation/main/data/age%20group.csv"},
  "transform": [
    {"filter": "datum.Rate > 0"},
    {"calculate": "datum.Rate", "as": "Suicide Rate (per 100,000 population)"}
    
  ],
  "spacing": 0,
  "hconcat": [
    {
      "width": 420,
      "height": 300,
      "transform": [{"filter": "datum.Sex == 'Male'"}],
      "mark": {
        "type": "boxplot",
        "extent": "min-max"
      },
      "encoding": {
        "x": {
          "field": "Suicide Rate (per 100,000 population)",
          "type": "quantitative",
          "sort": "descending",
          "scale": {"domain": [200, 0]}
        },
        "y": {
          "field": "Age Group", 
          "type": "nominal",
          "sort": "descending",
          "axis": null},
        "size": {"value": 20},
        "color": {"value" : "#ccd5ae"}
      }
        },
        {
          "width": 50,
          "height": 300,
          "view": {"stroke": null},
          "mark": {
            "type": "text",
            "align": "center"
          },
          "encoding": {
            "y": {"field": "Age Group", "type": "ordinal", "axis": null, "sort": "descending"},
            "text": {"field": "Age Group"},
            "opacity": {"value": 0.01}
          }
        }, 
    {
      "width": 420,
      "height": 300,
      "transform": [{"filter": "datum.Sex == 'Female'"}],
      "mark": {
        "type": "boxplot",
        "extent": "min-max"
      },
      "encoding": {
        "x": {
          "field": "Suicide Rate (per 100,000 population)",
          "type": "quantitative",
          "sort": "descending",
          "scale": {"domain": [0, 200]}
        },
        "y": {
          "field": "Age Group", 
          "type": "nominal",
          "sort": "descending",
          "axis": null},
        "size": {"value": 20},
        "color": {"value" : "#d4a373"}
      }
        }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {
        "grid": false,
        "labelFontSize": 13,
        "titleFontSize": 15},
    "font": "Maven Pro"
  }
}
