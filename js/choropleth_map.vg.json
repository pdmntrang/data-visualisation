{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f5f5f5",
  "width": "container",
  "height": 500,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Gender_selection",
      "value": "Both sexes",
      "bind": {
        "input": "select",
        "options": [
          "Both sexes",
          "Male",
          "Female"
        ],
        "labels": [
          "Total",
          "Male",
          "Female"
        ],
        "name": "Gender selection: "
      }
    },
    {
      "name": "Year_selection",
      "value": "2019",
      "bind": {
        "input": "range",
        "min": 2009,
        "max": 2019,
        "step": 1,
        "name": "Year Selection: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/pdmntrang/data-visualisation/main/data/suicide-rate.csv"
  },
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/pdmntrang/data-visualisation/main/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson", 
          "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
    {"transform": [
      {"lookup": "Country",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/pdmntrang/data-visualisation/main/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson", 
              "feature": "ne_110m_admin_0_countries"}
          },
          "key": "properties.NAME"
        },
        "as": "geo"
      },
      {"filter": "Gender_selection == null || datum.Sex == Gender_selection"},
      {"filter": "datum.Year == Year_selection"}
    ],
  "mark": {"type": "geoshape","stroke": "black", "strokeWidth": 0.3},
  "encoding": {
    "shape": {
      "field": "geo",
      "type": "geojson"
    },
    "color": {
      "field": "Rate",
      "type": "quantitative",
      "legend": {
        "format": ".0f",
        "title": "Suicide rate (per 100,000 population)"},
        "scale": {
        "type": "threshold",
        "domain": [2, 4, 6, 8, 10, 12, 14, 16, 18],
        "scheme": "redblue",
        "reverse": true
        
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Rate", "type": "quantitative", "title": "Suicide rate (per 100,000 population", "format": ".2f"}
    ]
  }
}],
  "config": {
    "font": "Maven Pro",
    "legend": {
      "titleFontSize": 15,
      "labelFontSize": 13,
      "orient": "none",
      "direction": "horizontal",
      "legendX": 650,
      "legendY": 400,
      "titleOrient": "left",
      "titleLimit": 300
  }
  }
}